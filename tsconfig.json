{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "sourceMap": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["es2015", "es2016"]
    },
    "exclude": [
        "node_modules"
    ]
}
