{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ],
    "baseUrl": "./src",
    "rootDirs": [
      "./src",
      "./shared",
    ],
    "paths": {
      "@block/shared/*": [
        "../shared/*"
      ],
      "@block/server/*": [
        "../server/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
